<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ui5con.experienceapp.controller.App" displayBlock="true"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:space="ui5lab.wl.space" xmlns:lightbox="ui5lab.lightbox">
	<Shell>
		<App>
			<Page title="{i18n>TITLE}" backgroundDesign="Solid">
				
				<content>
					<IconTabBar
						class="sapUiResponsiveContentPadding">
						<items>
							<IconTabFilter
								icon="sap-icon://picture">
								<space:Intro title="Insert Something Awesome Here" text="Ummm ............ Like some photos, maybe ?"/>

								<lightbox:LightBox images="{viewModel>/images}" width="100%" height="200px">
									
								</lightbox:LightBox>
								
							</IconTabFilter>
							<IconTabFilter
								icon="sap-icon://jam">
								<html:iframe allowfullscreen="" id="wallsio-iframe" src="https://walls.io/k62ey?nobackground=1&amp;show_header=0" style="border:0;height:800px;width:100%"></html:iframe>
							</IconTabFilter>

							
						</items>
					</IconTabBar>
				</content>
			
			</Page>
		</App>
	</Shell>
</mvc:View>
